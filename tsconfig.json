{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "lib": ["es2017", "dom"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
    }
}